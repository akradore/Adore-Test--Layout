<?xml version="1.0" encoding="UTF-8"?>
<templates>
    <t id="attachment_preview" t-name="hire_purchase.attachment_preview_template">
        <span>
            <i class="fa fa-eye attachment_preview_btn"></i>
        </span>
    </t>
    <t t-name="attachment_preview_modal">
        <div class="modal">
            <div class="modal-body">
                <button type="button" class="btn float-right bg-dark text-light" data-dismiss="modal">
                    <span><i class="fa fa-times"></i></span>
                </button>
                <div class="embed-responsive embed-responsive-1by1 d-flex justify-content-center">
                    <iframe class="embed-responsive-item" t-att-src="attachment_url" scrolling="no" align="middle"></iframe>
                </div>
            </div>
        </div>
    </t>
    <t t-name="FieldRange">
        <span t-att-class="'oe_form_field '+widget.widget_class" t-att-style="widget.attrs.style">
            <t t-if="widget.mode == 'edit'">
                <div class="button-minus" style="margin-right: 144px !important;margin-bottom: -19px;" role="button" tabindex="0">
                    <i class="fa fa-minus" style="position: relative;margin-top: 7px;padding-left: 2px;"></i>
                </div>
                <div class="slidecontainer">
                    <input type="range" min="0" max="100" class="slider" id="myRange" style="margin-left: 42px;margin-top: -14px;"/>
                </div>
                <div class="button-plus" style="margin-right: -82px;margin-top: -26px;" role="button" tabindex="0">
                    <i class="fa fa-plus" style="position: relative;margin-top: 7px;padding-left: 2px;"></i>
                </div>
            </t>
        </span>
    </t>
    <t t-name="hire_purchase.TreeViewRadio">
        <div class="tree_view_radio_section">
            <input type="radio" name="tree_view_radio" class="quick_check_offer_radio"/>
        </div>
    </t>
</templates>