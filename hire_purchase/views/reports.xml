<odoo>
	<data>

		<report id="action_report_payment_receipt"
				model="account.hp"
				string="Payment Receipt"
				report_type="qweb-pdf"
				name="hire_purchase.report_payment_receipt"
				file="hire_purchase.report_payment_receipt" />

		 <report string="HP Account Paper"
				 model="account.hp"
				 name="hire_purchase.merge_letter"
				 id="letter_letter_info"
				 file="hire_purchase.merge_letter"
				 report_type="qweb-pdf"/>


	 	<report string="HP Account Details"
				model="account.hp"
				name="hire_purchase.hp_info"
				id="account_hp_id"
				file="hire_purchase.hp_info"
				report_type="qweb-pdf"/>

		<report
            id="action_report_credit_application"
            string="Application For Credit"
            model="sale.order"
            report_type="qweb-pdf"
            file="hire_purchase.report_saleorder_credit_application"
            name="hire_purchase.report_saleorder_credit_application"
        />

		<record id="hp_report_paperformat" model="report.paperformat">
			<field name="name">HP Account paperformat</field>
			<field name="default" eval="True"/>
			<field name="format">A4</field>
			<field name="orientation">Landscape</field>
			<field name="margin_top">40</field>
			<field name="margin_bottom">20</field>
			<field name="margin_left">7</field>
			<field name="margin_right">7</field>
			<field name="header_line" eval="False"/>
			<field name="header_spacing">35</field>
			<field name="dpi">90</field>
		</record>

		<report string="Payment Receipt"
				model="payment.receipt.wizard"
				name="hire_purchase.payment_receipt_report"
				id="payment_receipt_id"
				file="hire_purchase.payment_receipt_report"
				report_type="qweb-pdf"
				paperformat="hire_purchase.hp_report_paperformat"/>

	</data>
</odoo>