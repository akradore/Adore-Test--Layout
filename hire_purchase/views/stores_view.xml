<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="store_warehouse_tree_view" model="ir.ui.view">
            <field name="name">store.warehouse.tree.view</field>
            <field name="model">store.warehouse</field>
            <field name="arch" type="xml">
                <tree string="Store Warehouses">
                    <field name="warehouse_id"/>
                    <field name="sequence"/>
                </tree>
            </field>
        </record>

        <!-- Stores Form View -->
         <record id="stores_view_form" model="ir.ui.view">
            <field name="name">stores.form</field>
            <field name="model">stores</field>
            <field name="arch" type="xml">
                <form string="Store">
                    <sheet>
                      <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" string="Store Name"/>
                            <h1>
                                <field name="name" placeholder="Store name..."/>
                            </h1>
                        </div>
                        <group>
                            <group name="left">
                                <field name="user_id"/>
                                <field name="analytic_tag_id"/>
                                <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            </group>
                            <group name="right">
                                <field name="store_code"/>
                                <field name="partner_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="members" string="Store Members">
                                <field name="member_ids" widget="many2many" options="{'not_delete': True}">
                                    <kanban quick_create="false" create="true" delete="true">
                                        <field name="id"/>
                                        <field name="name"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_global_click" style="max-width: 200px">
                                                    <div class="o_kanban_record_top">
                                                        <img t-att-src="kanban_image('res.users', 'image_small', record.id.raw_value)" height="40" width="40" class="oe_avatar oe_kanban_avatar_smallbox mb0" alt="Avatar"/>
                                                        <div class="o_kanban_record_headings ml8">
                                                            <strong class="o_kanban_record_title"><field name="name"/></strong>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <page string="Warehouse">
                                <field name="store_warehouse_ids">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="warehouse_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Journals/Payment">
                                <field name="payment_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Stores Tree View -->
        <record id="view_stores_tree" model="ir.ui.view">
            <field name="name">stores.tree</field>
            <field name="model">stores</field>
            <field name="arch" type="xml">
                <tree string="Stores">
                    <field name="name"/>
                    <field name="store_code"/>
                    <field name="active" invisible="1"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <!-- Stores Action -->
         <record id="action_stores_form" model="ir.actions.act_window">
            <field name="name">Stores</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stores</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_stores_form" id="menu_action_stores_form" name="Stores" parent="base.menu_users" sequence="3"/>
    </data>
</odoo>
