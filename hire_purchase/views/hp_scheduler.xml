<?xml version="1.0" encoding='UTF-8'?>
<openerp>
	<data noupdate="0">
		<record id="hp_due_calculation_corn" model="ir.cron">
			<field name="name">HP Account Due Calculation</field>
			<field name="active" eval="True" />
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="model_id" ref="model_account_hp" />
			<field name="state">code</field>
			<field name="code">model.hp_due_cron()</field>
			<field name="doall" eval="False" />
		</record>

		<record id="hp_late_fee_cron" model="ir.cron">
			<field name="name">HP Account Late Fee Calculation</field>
			<field name="active" eval="True" />
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="model_id" ref="model_account_hp" />
			<field name="state">code</field>
			<field name="code">model.hp_late_fees()</field>
			<field name="doall" eval="False" />
		</record>
		
		<record id="hp_classification_cron" model="ir.cron">
			<field name="name">HP Account Classifications Calculation</field>
			<field name="active" eval="True" />
			<field name="interval_number">1</field>
			<field name="interval_type">days</field>
			<field name="numbercall">-1</field>
			<field name="model_id" ref="model_account_hp" />
			<field name="state">code</field>
			<field name="code">model.hp_classification_status()</field>
			<field name="doall" eval="False" />
		</record>

		<record id="installment_post_button_journal_entry_create_cron" model="ir.cron">
			<field name="name">Installment Post Button Journal Entry</field>
			<field name="model_id" ref="model_account_hp_installment"/>
			<field name="state">code</field>
			<field name="code">model.post_cron()</field>
			<field name="interval_number">1</field>
			<field name="nextcall" eval="(DateTime.now() + relativedelta(day=7)).strftime('%Y-%m-%d 23:00:00')"/>
			<field name="interval_type">months</field>
			<field name="numbercall">-1</field>
			<field name="doall" eval="False"/>
			<field name='active'>True</field>
        </record>

	</data>
</openerp>
