<odoo>
    <record id="account_hp_dashboard_kanban_view" model="ir.ui.view">
        <field name="name">account.hp.dashboard.view</field>
        <field name="model">account.hp.dashboard</field>
        <field name="arch" type="xml">
            <kanban
                    class="oe_background_grey o_kanban_dashboard o_salesteam_kanban o_project_kanban "
                    create="0">
                <field name="color"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{kanban_color(record.color.raw_value)}">
                            <t t-value="record.name.raw_value" t-set="val"/>
                            <div class="o_project_kanban_manage">
                            </div>
                            <div class="container o_kanban_card_content">
                                <div class="row">
                                    <t t-if="(val == 'HP Account Dashboard')" t-call="hp_detail"/>
                                    <t t-if="(val == 'HP Account Disbursement Details')" t-call="AccountHPGraph"/>
                                    <t t-if="(val == 'Sector Details')" t-call="SectorGraph"/>
                                    <t t-if="(val == 'Outstanding Details')" t-call="OutstandingDetails"/>
                                    <t t-if="(val == 'Delinquency Rate')" t-call="DelinquencyRate"/>
                                </div>
                            </div>
                            <div class="container o_kanban_card_manage_pane">
                            </div>
                        </div>
                    </t>

                    <t t-name="DelinquencyRate">
                        <div t-attf-class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
                                    <h3>Delinquency Rate</h3>
                                </div>
                                <div class="o_secondary">
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 6%;">
                            <div class="col-xs-6 o_kanban_primary_left"></div>
                            <div class="col-xs-6 o_kanban_primary_right text-right">
                                <h1>
                                    <strong>
                                        <field name="delinquency_percent"/>
                                        <span>%</span>
                                    </strong>
                                </h1>
                            </div>
                        </div>
                        <div style="margin-bottom: -3%;margin-top: 9%;">
                            <field name="delinquency_graph" t-att-graph_type="'bar'"
                                   widget="dashboard_graph"/>
                        </div>
                    </t>

                    <t t-name="OutstandingDetails">
                        <div t-attf-class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
                                    <h2>Outstanding Details</h2>
                                </div>
                                <div class="o_secondary">
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 6%;">
                            <div class="col-xs-6 o_kanban_primary_left"></div>
                            <div class="col-xs-6 o_kanban_primary_right text-right">
                                <span>Total Outstanding Amount :
                                </span>
                                <field name="total_out_amt"/>
                            </div>
                        </div>
                        <div style="margin-bottom: -3%;margin-top: 9%;">
                            <field name="outstanding_graph" t-att-graph_type="'bar'"
                                   widget="dashboard_graph"/>
                        </div>
                    </t>

                    <t t-name="SectorGraph">
                        <div t-attf-class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
                                    <h3>Sector Details</h3>
                                </div>
                                <div class="o_secondary">
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 6%;">
                            <div class="col-xs-6 o_kanban_primary_left"></div>
                            <div class="col-xs-6 o_kanban_primary_right text-right">
                                <span>Total Disbursed
                                    Amount :
                                </span>
                                <field name="total_amt"/>
                            </div>
                        </div>
                        <div style="margin-bottom: -3%;margin-top: 9%;">
                            <field name="sector_graph" t-att-graph_type="'bar'"
                                   widget="dashboard_graph"/>
                        </div>
                    </t>

                    <t t-name="hp_detail">
                        <div t-attf-class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
                                    <h3>HP Account Details Dashboard</h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6 o_kanban_primary_left">
                            <button type="action" name="%(hire_purchase.action_new_hp_account_details)d"
                                    context="{}" class="btn btn-primary btn-sm">
                                <span>New HP Account Application</span>
                            </button>
                        </div>
                        <div class="col-xs-6 o_kanban_primary_right ">
                            <t t-call="HPdetailsRight"/>
                        </div>
                    </t>

                    <t t-name="AccountHPGraph">
                        <div t-attf-class="o_kanban_card_header">
                            <div class="o_kanban_card_header_title">
                                <div class="o_primary">
                                    <h3>HP Account Disbursement Details</h3>
                                </div>
                                <div class="o_secondary">
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 6%;">
                            <div class="col-xs-6 o_kanban_primary_left"></div>
                            <div class="col-xs-6 o_kanban_primary_right text-right">
                                <span>Total Disbursed
                                    Amount :
                                </span>
                                <field name="total_amt"/>
                            </div>
                        </div>
                        <div style="margin-bottom: -3%;margin-top: 9%;">
                            <field name="kanban_dashboard_graph" t-att-graph_type="'bar'"
                                   widget="dashboard_graph"/>
                        </div>
                    </t>

                    <t t-name="HPdetailsRight">
                        <div style="display:block;">
                            <a name="%(hire_purchase.action_account_hp_tree_small)d" type="action">
                                <span class="o_value pull-right">
                                    <field name="hp_count"/>
                                </span>
                                <span class="o_label" style="overflow:visible !important">Total HP Accounts</span>
                            </a>
                            <br/>
                            <a name="%(hire_purchase.action_draft_state_hp_account)d" type="action">

                                <span class="o_value pull-right">
                                    <field name="new_hp"/>
                                </span>
                                <span class="o_label" style="overflow:visible !important">New HP Account</span>
                            </a>
                            <br/>

                            <a name="%(hire_purchase.action_apply_state_hp_account)d" type="action">
                                <span class="o_value pull-right">
                                    <field name="hp_sanctioned_count"/>
                                </span>
                                <span class="o_label" style="overflow:visible !important">Sanctioned HP Account</span>
                            </a>
                            <br/>

                            <a name="%(hire_purchase.action_partial_state_hp_account)d" type="action">
                                <span class="o_value pull-right">
                                    <field name="hp_partial_count"/>
                                </span>
                                <span class="o_label" style="overflow:visible !important">Partially Disbursed HP Account
                                </span>
                            </a>
                            <br/>

                            <a name="%(hire_purchase.action_approved_state_hp_account)d" type="action">
                                <span class="o_value pull-right">
                                    <field name="hp_disbursed_count"/>
                                </span>
                                <span class="o_label" style="overflow:visible !important">Disbursed HP Account</span>
                            </a>
                            <br/>

                            <a name="%(hire_purchase.action_done_state_hp_account)d" type="action">
                                <span class="o_value pull-right">
                                    <field name="hp_done_count"/>
                                </span>
                                <span class="o_label" style="overflow:visible !important">Done HP Account</span>
                            </a>
                            <br/>

                            <a name="%(hire_purchase.action_cancel_state_hp_account)d" type="action">
                                <span class="o_value pull-right">
                                    <field name="hp_cancel_count"/>
                                </span>
                                <span class="o_label" style="overflow:visible !important">Declined HP Account</span>
                            </a>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="open_account_hp_dashboard_kanban" model="ir.actions.act_window">
        <field name="name">HP Account Dashboard</field>
        <field name="res_model">account.hp.dashboard</field>
        <field name="view_mode">kanban,form</field>
        <field name="view_id" ref="account_hp_dashboard_kanban_view"/>
        <field name="usage">menu</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p>
                This is the HP Account dashboard.
            </p>
        </field>
    </record>


    <menuitem id="menu_hp_dash_board" name="Dashboard"
              action="open_account_hp_dashboard_kanban" parent="main_root_hp"
              sequence="1"/>
</odoo>