<?xml version="1.0" encoding="utf-8"?>
	<odoo>
		<!-- Project Task Kanban View -->
        <record model="ir.ui.view" id="view_hp_kanban">
            <field name="name">account.hp.kanban</field>
            <field name="model">account.hp</field>
            <field name="arch" type="xml">
                <kanban default_group_by="stage_id" class="o_kanban_small_column o_kanban_project_tasks" on_create="quick_create">
                    <field name="color"/>
                    <field name="priority"/>
                    <field name="stage_id" options='{"group_by_tooltip": {"description": "Stage Description", "legend_priority": "Use of stars"}}'/>
                    <field name="user_id"/>
                    <field name="hp_id"/>
                    <progressbar field="kanban_state" colors='{"done": "success", "blocked": "danger"}'/>
                    <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_color_#{kanban_getcolor(record.color.raw_value)} oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title"><field name="hp_id"/></strong><br/>
                                       <small class="o_kanban_record_subtitle text-muted">
                                       		<span t-attf-class="#{red || ''}"><i><field name="name"/></i></span><br/>
                                           <span t-attf-class="#{red || ''}"><i><field name="apply_date"/></i></span><br/>
                                           <span t-attf-class="#{red || ''}"><i><field name="partner_id"/></i></span><br/>
                                            <span t-attf-class="#{red || ''}"><i><field name="hp_amount"/></i></span>
                                        </small>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown" groups="base.group_user">
                                        <a class="dropdown-toggle btn" data-toggle="dropdown" href="#" role="button">
                                            <span class="fa fa-ellipsis-v" aria-hidden="true"/>
                                        </a>
                                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                                            <li t-if="widget.editable"><a type="set_cover">Set Cover Image</a></li>
                                            <li t-if="widget.editable"><a type="edit">Edit HP Account Application</a></li>
                                            <li t-if="widget.deletable"><a type="delete">Delete</a></li>
                                            <li class="divider"></li>
                                            <li class="dropdown-header">Record's Colour</li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="kanban_state" widget="state_selection" groups="base.group_user"/>
                                   		<img t-att-src="kanban_image('res.users', 'image_small', record.user_id.raw_value)" alt="Image"
                                             t-att-title="record.user_id.value" t-att-alt="record.user_id.value" width="24" height="24"
                                             class="oe_kanban_avatar float-right"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"></div>
                        </div>
                    </t>
                    </templates>
                </kanban>
            </field>
         </record>
         
         <record id="account_hp_inherit_id" model="ir.ui.view">
         	<field name="name">account.hp.form.inherit</field>
            <field name="model">account.hp</field>
            <field name="inherit_id" ref="hire_purchase.account_hp_form" />
            <field name="arch" type="xml">
            	<xpath expr="/form/sheet/h1/field[@name='hp_id']" position="replace">
            		<field name="kanban_state" widget="state_selection"/>
            		<div class="oe_title">
                        <h1>
                            <field name="priority" widget="priority"/>
                            <field name="hp_id" placeholder="HP Account Title..."/>
                        </h1>
                    </div>
            	</xpath>
            </field>
         </record>

        <record id="account_hp_inherit_id_groups" model="ir.ui.view">
            <field name="name">account.hp.inherit.id.groups</field>
            <field name="model">account.hp</field>
            <field name="inherit_id" ref="hire_purchase.account_hp_form"/>
            <field name="groups_id"
                   eval="[(6, 0, [ref('hire_purchase.group_hp_account_manager'),ref('hire_purchase.group_hp_account_controller')])]"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='controller_id']" position="attributes">
                    <attribute name="readonly">0</attribute>
                </xpath>
            </field>
        </record>

         <record model="ir.actions.act_window" id="hire_purchase.action_account_hp_tree_small">
			<field name="name">HP Account Applications</field>
			<field name="res_model">account.hp</field>
			<field name="view_mode">kanban,tree,form,pivot,graph</field>
		</record>
 </odoo>
    