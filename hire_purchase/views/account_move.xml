<odoo>
    <data>

          <record model="ir.ui.view" id="account_move_form_extend">
            <field name="name">Account Move</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="store_id"/>
                    <field name="sale_type"/>
                </xpath>
                <xpath expr="//form/sheet/div[@name='button_box']" position="inside">
                   <button name="action_open_hp_records" type="object" class="oe_stat_button" icon="fa-credit-card"
                                string="HP Account" attrs="{'invisible': [('hp_count', '=', 0)]}">
                       <field name="hp_count" widget="statinfo" string="HP Account" invisible="1"/>
                   </button>
                </xpath>
            </field>
          </record>

    </data>
</odoo>