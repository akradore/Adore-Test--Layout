<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="account_view_account_journal_form_inherit" model="ir.ui.view">
            <field name="name">account.view.account.journal.form.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='type']" position="after">
                    <field name="store_id"/>
                </xpath>
            </field>
        </record>

    	<record id="view_hp_payment_form" model="ir.ui.view">
            <field name="name">hp.payment.form.view</field>
            <field name="model">hp.payment</field>
            <field name="arch" type="xml">
                <form string="Register payment">
                	
                	<group col="2" colspan="4">
	                    <label for="amount"/>
	                    <div name="amount_div" class="o_row">
	                        <field name="amount"/>
	                        <field name="currency_id" options="{'no_create': True, 'no_open': True}" groups="base.group_multi_currency"/>
	                    </div>
	                    <field name="payment_date"/>
	                    <field name="name" invisible="1"/>
	                    <field name="journal_id"
                               domain="[('store_id.member_ids','child_of',[uid])]"
                               attrs="{}"/>
	                    <field name="hp_id" invisible="1"/>
	                    <field name="is_late_fee" invisible="1"/>
	                    <field name="late_fee" attrs="{'invisible':[('is_late_fee','=',False)]}"/>
	                 </group>
	                 <footer>
                        <button string='Validate' name="action_validate_hp_payment" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        
		<record id="action_hp_payment" model="ir.actions.act_window">
            <field name="name">Register Payment</field>
            <field name="res_model">hp.payment</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_hp_payment_form"/>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
     
