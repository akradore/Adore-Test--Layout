<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="download_report_view" model="ir.ui.view">
			<field name="name">wiz.download.report.form</field>
			<field name="model">wiz.download.report</field>
			<field name="arch" type="xml">
				<form string="Download Report">
					<group col="2" colspan="2">
						<field name="report_type" options="{'horizontal': true}" widget="radio" />
						<field name="date"/>
						<field name="type" attrs="{'invisible':[('report_type', '!=', 'portfolio')]}" options="{'horizontal': true}"  widget="radio"/>
						<field name="exported_file" filename="file_name" readonly="1" />
						<field name="file_name" invisible="1" />
					</group>
					<footer>
						<button string="Generate file" name="generate_file" type="object"
							default_focus="1" class="btn-primary" />
						<button string="Cancel" class="btn-default" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<act_window id="action_wiz_download_report"
					name="Download Report"
					res_model="wiz.download.report"
					binding_model="account.hp"
					binding_views="form"
					view_mode="form"
					target="new"  />

		<menuitem name="Reporting" id="menu_report_account_hp"
			groups="hire_purchase.group_hp_account_user,hire_purchase.group_hp_account_manager"
			sequence="9" parent="hire_purchase.main_root_hp" />

		<menuitem name="Download Report" id="menu_generate_report"
			action="action_wiz_download_report" sequence="2"
			parent="menu_report_account_hp" />



	</data>
</odoo>