<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="frontier_api_calls_form_view" model="ir.ui.view">
			<field name="name">Frontier API Calls Form View</field>
			<field name="model">frontier.api.calls</field>
			<field name="arch" type="xml">
				<form string="Frontier API Calls">
					<sheet>
						<group>
							<group>
								<field name="date"/>
								<field name="app_nr"/>
								<field name="partner_id"/>
								<field name="sale_order_id"/>
								<field name="hp_account_id"/>
							</group>
							<group>
								<field name="type"/>
								<field name="status"/>
								<field name="app_id"/>
								<field name="maximum_deal_amount"/>
							</group>
								<field name="decline_rsn"/>
								<field name="validation_error"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="frontier_api_calls_tree_view" model="ir.ui.view">
			<field name="name">Frontier API Calls Tree View</field>
			<field name="model">frontier.api.calls</field>
			<field name="arch" type="xml">
				<tree string="Frontier API Calls">
					<field name="date"/>
					<field name="partner_id"/>
					<field name="type"/>
					<field name="status"/>
					<field name="app_id"/>
					<field name="maximum_deal_amount"/>
				</tree>
			</field>
		</record>

		<record id="frontier_api_calls_action_view" model="ir.actions.act_window">
			<field name="name">Frontier API Calls Action</field>
			<field name="res_model">frontier.api.calls</field>
			<field name="view_mode">tree,form</field>
		</record>

		<menuitem id="menu_frontier_api" name="Frontier API" parent="base.menu_custom"/>
		<menuitem id="menu_frontier_api_call_record" name="Frontier API Calls" parent="menu_frontier_api"
			action="frontier_api_calls_action_view"/>

		  <record id="view_res_partner_quick_check_form" model="ir.ui.view">
            <field name="name">Frontier API Calls Form View</field>
            <field name="model">frontier.api.calls</field>
            <field name="mode">primary</field>
            <field name="arch" type="xml">
				<form string="Frontier API Calls">
					<sheet>
						<group>
							<field name="status" readonly="1"></field>
							<field name="decline_rsn" readonly="1" attrs="{'invisible':[('status','not in',['CompletedDeclined'])]}"/>
							<field name="validation_error" readonly="1" attrs="{'invisible':[('status','not in',['ValidationError'])]}"/>
							<field name="est_credit_amount" readonly="1" attrs="{'invisible':[('status','not in',['CompletedApproved'])]}"/>
							<field name="quick_check_deposit" readonly="1" attrs="{'invisible':[('status','not in',['CompletedApproved'])]}"
							string="+ Deposit"/>
							<field name="maximum_deal_amount" readonly="1" attrs="{'invisible':[('status','not in',['CompletedApproved'])]}"/>
						</group>
						<footer>
							<button string='Create Quotation' name="create_quotation" type="object" class="btn-primary"
									attrs="{'invisible':[('status','not in',['CompletedApproved'])]}"/>
							<button string="Close" class="btn-primary" special="cancel"/>
						</footer>
					</sheet>
				</form>
            </field>
        </record>

		<record id="quickcheck_offer_deposite_wizard_form_view" model="ir.ui.view">
			<field name="name">QuickCheck Offer Deposite Wizard Form View</field>
			<field name="model">quickcheck.offer.result</field>
			<field name="arch" type="xml">
				<form string="QuickCheck Offer Deposite Wizard">
					<sheet>
						<group>
							<group>
								<field name="order_amount" readonly="1"/>
							</group>
						</group>
						<group>
							<group>
								<field name="deposit_slider" widget="range"/>
							</group>
							<group>
								<div invisible="context.get('overridden',0)">
									<field name="override_code" string="" class="oe_line" no_label="1"
										   invisible="context.get('get_reason',0)"
										   placeholder="Code to ovveride"
									/>
									<field name="override_reason" string="" no_label="1" class="oe_line"
										   invisible="not context.get('get_reason',0)"
										   placeholder="Reason to override"
									/>
									<button name="check_override_code" class="btn-danger" type="object"
											string="Override Minimum Deposit"
									/>
								</div>
							</group>
						</group>
						<group col="4">
							<field name="deposit_percentage" readonly="1"/>
							<field name="deposit_amt"/>
							<field name="hp_amount" readonly="1"/>
						</group>
						<footer>
							<button string='Quick Check Offer' name="action_quick_check_offer" type="object" class="btn-primary"/>
							<button string="Close" class="btn-primary" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
		</record>

		<record id="quickcheck_offer_result_submit_hp_application" model="ir.ui.view">
		    <field name="name">quickcheck.offer.result.submit.hp.application</field>
		    <field name="model">quickcheck.offer.result</field>
		    <field name="arch" type="xml">
		        <form string="HP Application Submitted">
		            <sheet>
		                <group>
							<field name="sale_order_id" invisible="1"/>
							<div>
								Application successfully submitted, please upload supporting documents and submit them for processing
							</div>
		                </group>
		            </sheet>
					<footer>
						<button name="open_hp_application" type="object" string="Close"/>
					</footer>
		        </form>
		    </field>
		</record>

        <record id="quickcheck_offer_result_wizard_form_view" model="ir.ui.view">
			<field name="name">QuickCheck Offer Result Wizard Form View</field>
			<field name="model">quickcheck.offer.result</field>
			<field name="arch" type="xml">
				<form string="QuickCheck Offer Result Wizard">
					<sheet>
						<group>
							<group>
								<field name="status" readonly="1"/>
								<field name="decline_rsn" readonly="1" attrs="{'invisible':[('status','not in',['CompletedDeclined'])]}"/>
								<field name="maximum_deal_amount" readonly="1" attrs="{'invisible':[('status','not in',['CompletedApproved'])]}"/>
								<field name="partner_id" readonly="1" target="_blank"/>
							</group>
							<group>
								<field name="app_id" attrs="{'invisible':[('status','not in',['CompletedApproved'])]}"/>
								<field name="validation_error" readonly="1" attrs="{'invisible':[('status','not in',['ValidationError'])]}"/>
								<field name="return_type" invisible="context.get('any_active_hp',False)" string="Payment Type"/>
								<field name="debit_order_date" invisible="context.get('any_active_hp',False)" string="Payment Date"/>
							</group>
						</group>
						<field name="offer_ids" attrs="{'invisible':[('status','not in',['CompletedApproved'])]}">
							<tree create="0" editable="botton" default_order="term">
								<field name="is_selected_offer" widget="tree_view_radio" invisible="context.get('any_active_hp',False)"/>
								<field name="term"/>
								<field name="instalment" />
								<field name="hp_amount" />
								<field name="adminfee"/>
								<field name="interest"/>
								<field name="initiation_fee"/>
								<field name="total_vat"/>
								<field name="tcoc"/>
								<field name="settlement_amount"/>
								<field name="first_instalment_date"/>
								<field name="life_insurance_amount"/>
								<field name="insurance_amt"/>
								<field name="payment_freq"/>
								<field name="deposit_amt"/>
								<field name="deposit_per"/>
							</tree>
						</field>
						<footer>
							<button string='Select &amp; Submit Application' name="submit_hp_application" type="object" class="btn-primary"
							invisible="context.get('any_active_hp',False)"
							/>
							<button string="Close" class="btn-primary" special="cancel"/>
						</footer>
					</sheet>
				</form>
			</field>
		</record>

		<record id="quick_check_override_action_view" model="ir.ui.view">
			<field name="name">quick.check.override.action.view</field>
			<field name="model">quickcheck.offer.result</field>
			<field name="arch" type="xml">
				<form string="Override Deposit">
					<sheet>
						<group style="width:50%">
							<field name="override_new_deposit" required="1"  readonly="context.get('opt_generated',0)"
							/>
							<field name="override_reason" required="1" readonly="context.get('opt_generated',0)"/>
							<field name="override_code" required="1" invisible="context.get('opt_generated',0)"/>
							<field name="override_otp" readonly="1" invisible="not context.get('opt_generated',0)"/>
						</group>
					</sheet>
					<footer>
						<button name="override_deposit_head_office" type="object" string="Override" class="btn-primary"
						invisible="context.get('opt_generated',0)"
						/>
						<button special="cancel" class="btn-danger" string="Close"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="quick_check_override_action" model="ir.actions.act_window">
		    <field name="name">Override Deposit</field>
		    <field name="type">ir.actions.act_window</field>
		    <field name="res_model">quickcheck.offer.result</field>
		    <field name="view_mode">form</field>
		    <field name="view_id" ref="hire_purchase.quick_check_override_action_view"/>
			<field name="target">new</field>
		</record>

		<record id="quickcheck_offer_result_wizard_view" model="ir.actions.act_window">
			<field name="name">QuickCheck Offer Result Wizard Action</field>
			<field name="res_model">quickcheck.offer.result</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="quickcheck_offer_result_wizard_form_view" />
			<field name="target">new</field>
		</record>

	</data>
</odoo>
